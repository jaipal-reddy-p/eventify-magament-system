package com.example.demo.payload;

/**
 * DTO for handling user login requests.
 * This class encapsulates the email and password provided by the user during login.
 */
public class LoginRequest {

    private String email;
    private String password;

    /**
     * Gets the email entered by the user.
     * 
     * @return email in lowercase
     */
    public String getEmail() {
        return email;
    }

    /**
     * Sets the email after converting it to lowercase for consistency.
     * 
     * @param email the user's email
     */
    public void setEmail(String email) {
        this.email = email.toLowerCase(); // standardize email format
    }

    /**
     * Gets the password entered by the user.
     * 
     * @return plain text password
     */
    public String getPassword() {
        return password;
    }

    /**
     * Sets the user's password.
     * 
     * @param password the user's password
     */
    public void setPassword(String password) {
        this.password = password;
    }
}
